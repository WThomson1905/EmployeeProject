{
  "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",
    "properties": {
      "employeeId": {
        "type": "integer",
          "minimum": 0
      },
      "forename": {
        "type": "string",
        "minLength": 1
      },
      "surname": {
        "type": "string",
        "minLength": 1
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "email description"
      },
      "position": {
        "type": "integer",
        "minimum": 0,
        "maximum": 2
      }
    },
    "required": [
      "employeeId",
      "forename",
      "surname",
      "email",
      "position"
    ]
  


}